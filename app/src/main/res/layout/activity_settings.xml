<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:gravity="center"
    android:weightSum="8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="About Application"
            android:textColor="@color/AboutAppln"
            android:textSize="30dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
        android:layout_weight="6">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="25dp"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/ApplnData"
            android:text="@string/touristguideapp_aims_to_improve_the_quality_of_tourism_facilities_in_india_by_bringing_all_the_users_together_this_application_has_been_developed_by_himanshu_nemade_ashish_mehar_richa_kulkarni_shyamsundar_kukale_and_runay_dhaygude" />
    </LinearLayout>

</LinearLayout>